  background-color:rgb(80, 80, 80)

.bestlist-detail
  &:last-child:after
    content:""
  &:after
    content:", "
.n16-achievements
  border-radius:50%;
  height:24px;
  width:24px;
  margin-right:2px;

keeper-list
  display:flex
