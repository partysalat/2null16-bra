.layout-content(data-layout="column" data-layout-margin)
    md-grid-list(
        md-cols="2"
        md-cols-sm="2"
        md-cols-md="4"
        md-cols-gt-md="4"
        md-row-height-gt-md="1:1"
        md-row-height="16:9"
        md-gutter="8px" md-gutter-gt-sm="4px")
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised.md-primary(flex="auto",style="height:100%", data-ng-click="openCocktails($event)")
                md-icon.fa(md-font-icon="fa-glass",style="font-size:5vw")
                h3 <br/>Cocktails
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised.md-accent(flex="auto",style="height:100%",data-ng-click="openShot($event)")
                md-icon.fa(md-font-icon="fa-bolt", style="font-size:5vw")
                h3 <br/>Shot
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised.md-warn(flex="auto",style="height:100%",data-ng-click="openBeer($event)")
                md-icon.fa(md-font-icon="fa-beer",style="font-size:5vw")
                h3 <br/>Bier
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised(flex="auto",style="height:100%",data-ng-click="openCoffee($event)")
                md-icon.fa(md-font-icon="fa-coffee",style="font-size:5vw")
                h3 <br/>Kaffee
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised.md-warn(flex="auto",style="height:100%",data-ng-click="clearCache()")
                md-icon.fa(md-font-icon="fa-user-plus",style="font-size:5vw")
                h3 <br/>Neuer Nutzer
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised(flex="auto",style="height:100%",data-ng-click="clearCache()")
                md-icon.fa(md-font-icon="fa-cart-plus",style="font-size:5vw")
                h3 <br/>Neuer Drink
        md-grid-tile(md-rowspan="1" md-colspan="1" md-colspan-sm="1")
            md-button.md-raised.md-primary(flex="auto",style="height:100%",data-ng-click="clearCache()")
                md-icon.fa(md-font-icon="fa-refresh",style="font-size:5vw")
